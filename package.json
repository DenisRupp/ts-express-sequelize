{
  "name": "express-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "build": "npm run clear-dist && tsc --p tsconfig.json && tsc-alias",
    "start": "node dist/index.js",
    "dev": "nodemon --config nodemon.json",
    "migrate-db": "npx sequelize-cli db:migrate",
    "clear-dist": "rm -rf dist",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "pretty-quick --staged && npm run lint -- --fix",
    "ts-check": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "http-status": "^1.7.4",
    "luxon": "^3.4.4",
    "method-override": "^3.0.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.3",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/luxon": "^3.4.2",
    "@types/method-override": "^0.0.35",
    "@types/morgan": "^1.9.9",
    "@types/pg": "^8.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "concurrently": "8.0.1",
    "eslint": "8.56.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "^7.0.1",
    "lint-staged": "^13.2.0",
    "prettier": "2.2.1",
    "pretty-quick": "^3.1.0",
    "sequelize-cli": "^6.6.2",
    "source-map-support": "^0.5.19",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js}": "prettier --write"
  }
}
